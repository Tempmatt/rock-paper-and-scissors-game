import random

rock = '''
    _______
---'   ____)
      (_____)
      (_____)
      (____)
---.__(___)
'''

paper = '''
    _______
---'   ____)____
          ______)
          _______)
         _______)
---.__________)
'''

scissors = '''
    _______
---'   ____)____
          ______)
       __________)
      (____)
---.__(___)
'''

#Write your code below this line ğŸ‘‡
user = int(input("What do you choose? Type 0 for Rock, 1 for Paper or 2 for Scissors.\n"))


######Computers' Choice
computer = random.randint(0, 2)
if user >= 3 or user < 0:
  print("You have picked a wrong number number. Pease read the instruction above. Thanks")
elif user == 0:
  print(rock)
elif user == 1:
  print(paper)
elif user == 2:
  print(scissors)
else:
  print("Your Computer chose:")
  if computer == 0:
    print(rock)
  elif computer == 1:
    print(paper)
  elif computer == 2:
    print(scissors)
  
  if user == 0 and computer == 1:
    print("You lose")
  elif user == 1 and computer == 0:
    print("You win!")
  elif user == 1 and computer == 2:
    print("You lose")
  elif user == 2 and computer == 1:
    print("You win!")
  elif user == 0 and computer == 2:
    print("You win!")
  elif user == 2 and computer == 0:
    print("You lose")
  else:
    print("It's a tie")
    
